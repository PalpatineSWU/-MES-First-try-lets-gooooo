				<SubtypeId>SpawnGroup_Civi_Local_Reinforcements_Planet</SubtypeId>
			</Id>
			<Description>
				[RivalAI Spawn]
				[UseSpawn:true]
				[SpawningType:CustomSpawn]
				[StartsReady:true]
				[MaxSpawns:15]

				[SpawnGroups:Civi_Miners]						
				[SpawnGroups:Civi_Small_Fighter]
				[SpawnGroups:Civi_Small_Fighter_Squad]
				[SpawnGroups:Civi_Small_Fighter_Swarm]		
				[SpawnGroups:Civi_Small_ships]
				[SpawnGroups:Civi_Large_ships]

    		    [UseRelativeSpawnPosition:false]
				[InheritNpcAltitude:true]
    		    [MinDistance:3000]
    		    [MaxDistance:8000]
    		    [MinAltitude:0]
    		    [MaxAltitude:1]
    		    [IgnoreSafetyChecks:false]
    		    [ProcessAsAdminSpawn:true]
			</Description>

		</EntityComponent>

