				[UseChat:true]
				[StartsReady:true]
				[MaxChats:1]
				[BroadcastRandomly:true]
				[IgnoreAntennaRequirement:true]
				[IgnoredAntennaRangeOverride:50000]
				[Author:{Faction}]
				[Color:Blue]
				[ChatMessages:Tight band transmission calling all {Faction} ships near {GPS}, "We are under attack and need assistance!"]
				[GPSLabel:V... Civi short band distress call]
				[BroadcastChatType:Both]
				[ChatAudio:AQD_SB_Arc_020]
			</Description>
		</EntityComponent>










