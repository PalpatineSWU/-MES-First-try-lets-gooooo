				<TypeId>Inventory</TypeId>
				<SubtypeId>Action_Civi_Local_Reinforcements</SubtypeId>
			</Id>
			<Description>
				[RivalAI Action]
				[Chance:50]
				[SpawnEncounter:true]
				[Spawner:SpawnGroup_Civi_Local_Reinforcements_Planet]
				[Spawner:SpawnGroup_Civi_Local_Reinforcements_Space]

				[UseChatBroadcast:true]
				[ChatData:Chat_Civi_Local_Reinforcements]
			</Description>

		</EntityComponent>

