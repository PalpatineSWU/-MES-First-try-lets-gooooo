			<Id>
				<TypeId>Inventory</TypeId>
				<SubtypeId>Trigger_Civi_Local_Reinforcements</SubtypeId>
			</Id>
			<Description>
				[RivalAI Trigger]
				[UseTrigger:true]
        		[Type:Damage]
		    	[DamageTypes:Any]

        		[ExcludedDamageTypes:Environment]
        		[ExcludedDamageTypes:Deformation]
        		[ExcludedDamageTypes:Fire]

